datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}model Categoria {
  id           Int           @id @default(autoincrement())
  nombre       String
  profesionales Profesional[]
}

model Profesional {
  id          Int       @id @default(autoincrement())
  nombre      String
  modalidad   String
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId Int
  descripcion String?   //  breve descripción profesional
  experiencia Int?      //  años de experiencia
  ubicacion   String?   //  ciudad o estado
  correo      String?   //  contacto
  telefono    String?   //  contacto
  imagenUrl   String?   //  imagen personalizada
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt  
}
model Usuario {
  id       Int    @id @default(autoincrement())
  nombre   String
  correo   String @unique
  password String
  rol      String @default("usuario") // puede ser "admin" o "usuario"
  
}

